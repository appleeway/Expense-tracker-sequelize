{{!-- views/newedit.handlebars --}}
<div class="mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <h4>請輸入你的支出</h4>

      {{!-- 依不同頁面執行不同動作 --}}
      {{#ifEquals action '修改'}}
      <form action="/records/{{{record.id}}}?_method=PUT" method="POST">
        {{else}}
        <form action="/records/new" method="POST">
          {{/ifEquals}}
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">名稱</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱" value="{{record.name}}"
                required>
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-sm-2 col-form-label">日期</label>
            <div class="col-sm-10">
              <input type="date" class="form-control" id="date" name="date" placeholder="請輸入日期" value="{{record.date}}"
                required>
            </div>
          </div>
          <div class="form-group row">
            <label for="amount" class="col-sm-2 col-form-label">金額</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="amount" name="amount" placeholder="請輸入金額"
                value="{{record.amount}}" required>
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">分類</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="category" id="gridRadios1" value="home"
                    {{#ifEquals record.category "home"}} checked{{/ifEquals}}>
                  <label class="form-check-label" for="gridRadios1">
                    家居物業
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="category" id="gridRadios2" value="traffic"
                    {{#ifEquals record.category "traffic"}} checked{{/ifEquals}}>
                  <label class="form-check-label" for="gridRadios2">
                    交通出行
                  </label>
                </div>
                <div class="form-check disabled">
                  <input class="form-check-input" type="radio" name="category" id="gridRadios3" value="entertainment"
                    {{#ifEquals record.category "entertainment"}} checked{{/ifEquals}}>
                  <label class="form-check-label" for="gridRadios3">
                    休閒娛樂
                  </label>
                </div>
                <div class="form-check disabled">
                  <input class="form-check-input" type="radio" name="category" id="gridRadios4" value="food"
                    {{#ifEquals record.category "food"}} checked{{/ifEquals}}>
                  <label class="form-check-label" for="gridRadios4">
                    餐飲食品
                  </label>
                </div>
                <div class="form-check disabled">
                  <input class="form-check-input" type="radio" name="category" id="gridRadios5" value="other"
                    {{#ifEquals record.category "other"}} checked{{/ifEquals}}>
                  <label class="form-check-label" for="gridRadios5">
                    其他
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
          <div class="form-group row">
            <div class="col-sm-10">
              {{!-- 依不同頁面執行不同動作 --}}
              {{#ifEquals action '修改'}}
              <button type="submit" class="btn btn-outline-dark mt-3">更新支出</a>
                {{else}}
                <button type="submit" class="btn btn-outline-dark mt-3">建立支出</a>
                  {{/ifEquals}}
            </div>
          </div>
        </form>
    </div>
  </div>
</div>